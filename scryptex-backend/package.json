
{
  "name": "scryptex-backend",
  "version": "1.0.0",
  "description": "SCRYPTEX Multi-Chain Platform Backend API",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy:sepolia": "ts-node deploy/deployBridge.ts --network sepolia",
    "deploy:risechain": "ts-node deploy/deployBridge.ts --network risechain",
    "deploy:abstract": "ts-node deploy/deployBridge.ts --network abstract",
    "deploy:zerog": "ts-node deploy/deployBridge.ts --network zerog",
    "deploy:somnia": "ts-node deploy/deployBridge.ts --network somnia",
    "deploy:all": "npm run deploy:sepolia && npm run deploy:risechain && npm run deploy:abstract && npm run deploy:zerog && npm run deploy:somnia",
    "migrate": "ts-node src/database/migrate.ts",
    "seed": "ts-node src/database/seed.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "web3": "^4.2.2",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "typeorm": "^0.3.17",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "axios": "^1.6.0",
    "ws": "^8.14.2",
    "socket.io": "^4.7.5",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "node-cron": "^3.0.3",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "ipfs-http-client": "^60.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/morgan": "^1.9.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/bcryptjs": "^2.4.5",
    "@types/ws": "^8.5.8",
    "@types/multer": "^1.4.8",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.6",
    "ts-jest": "^29.1.1",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "hardhat": "^2.19.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3"
  },
  "keywords": ["blockchain", "defi", "bridge", "pump.fun", "multi-chain", "testnet"],
  "author": "SCRYPTEX Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
